<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="rs.raf.jun">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name=".application.RafTradingApp"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Nikola_Tadic_rn4419.Main">
        <activity
            android:name=".presentation.view.activities.SellActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.BuyActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.LoginActivity"
            android:exported="false" />
        <activity
            android:name=".presentation.view.activities.SplashActivity"
            android:exported="true"
            android:theme="@style/Theme.Nikola_Tadic_rn4419.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".presentation.view.activities.MainActivity"
            android:exported="true" />
        <activity
            android:name=".presentation.view.activities.StockDetailActivity"
            android:exported="true" />
    </application>

</manifest>