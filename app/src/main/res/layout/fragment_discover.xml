<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/discover_fragment_news_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discover_fragment_first_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_margin="40dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/newsListRv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discover_fragment_news_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="20dp"
        android:clipToPadding="false"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        />

    <TextView
        android:id="@+id/discover_fragment_stock_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/discover_fragment_second_section"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discover_fragment_news_title"
        android:textSize="25sp"
        android:textStyle="bold"
        android:layout_marginTop="310dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/stockListRv"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/discover_fragment_stock_title"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingTop="20dp"
        android:clipToPadding="false"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>